{
    "name": "nddcoder/php-attributes-scanner",
    "description": "Scan directory and get Class with Attributes info",
    "keywords": [
        "nddcoder",
        "php-attributes-scanner"
    ],
    "homepage": "https://github.com/dangdungcntt/php-attributes-scanner",
    "license": "MIT",
    "authors": [
        {
            "name": "Dung Nguyen Dang",
            "email": "dangdungcntt@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.18",
        "symfony/var-dumper": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Nddcoder\\PhpAttributesScanner\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nddcoder\\PhpAttributesScanner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage --min=90"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
